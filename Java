$(document).ready(function() {
    // Función para mostrar la fecha y hora actualizada cada segundo
    function mostrarFechaHora() {
        var fechaHora = new Date();
        var fecha = fechaHora.toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' });
        var hora = fechaHora.toLocaleTimeString('es-ES', { hour12: false });
        $('#fechaHora').html(fecha + ' - ' + hora);
    }

    // Llamar a la función para mostrar la fecha y hora al cargar la página
    mostrarFechaHora();

    // Actualizar la fecha y hora cada segundo
    setInterval(mostrarFechaHora, 1000);

    // Contador de artículos
    function contarArticulos() {
        var cantidadArticulos = $('section').find('article').length;
        $('#cantidadArticulos').text(cantidadArticulos);
    }

    // Llamar a la función para contar artículos al cargar la página
    contarArticulos();

    // Formulario para agregar artículo
    $('#formArticulo').submit(function(event) {
        event.preventDefault();
        var titulo = $('#tituloArticulo').val();
        var descripcion = $('#descripcionArticulo').val();
        var nuevoArticulo = '<article><h3>' + titulo + '</h3><p>' + descripcion + '</p></article>';
        $('#listaArticulos').append(nuevoArticulo);
        $('#tituloArticulo').val('');
        $('#descripcionArticulo').val('');
        contarArticulos(); // Actualizar contador de artículos
    });

    // Formulario de contacto
    $('#formContacto').submit(function(event) {
        event.preventDefault();
        var nombre = $('#nombre').val();
        var mensaje = $('#mensaje').val();
        // Aquí puedes agregar la lógica para enviar el mensaje de contacto
        alert('Nombre: ' + nombre + '\nMensaje: ' + mensaje);
        $('#nombre').val('');
        $('#mensaje').val('');
    });
});
